<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="sunhy_countdown_view">
        <attr name="timeTextSize" format="dimension" />
        <attr name="suffixTextSize" format="dimension" />

        <attr name="timeTextColor" format="color" />
        <attr name="timeBgColor" format="color" />
        <attr name="suffixTextColor" format="color" />

        <attr name="isTimeTextBold" format="boolean" />
        <attr name="isSuffixTextBold" format="boolean" />

        <attr name="daySuffixText" format="string" />
        <attr name="hourSuffixText" format="string" />
        <attr name="minuteSuffixText" format="string" />
        <attr name="secondSuffixText" format="string" />
        <attr name="milliSecondSuffixText" format="string" />

        <attr name="isShowDay" format="boolean" />
        <attr name="isShowDaySuffix" format="boolean" />
        <attr name="isShowHour" format="boolean" />
        <attr name="isShowHourSuffix" format="boolean" />
        <attr name="isShowMinute" format="boolean" />
        <attr name="isShowMinuteSuffix" format="boolean" />
        <attr name="isShowSecond" format="boolean" />
        <attr name="isShowSecondSuffix" format="boolean" />
        <attr name="isShowMilliSecond" format="boolean" />
        <attr name="isShowMilliSecondSuffix" format="boolean" />
        <attr name="isShowTimeBg" format="boolean" />

        <attr name="timeBgRadius" format="dimension" />
        <attr name="timeBgPadding" format="dimension" />

        <attr name="suffixDayHorizontalMargin" format="dimension" />
        <attr name="suffixHourHorizontalMargin" format="dimension" />
        <attr name="suffixMinuteHorizontalMargin" format="dimension" />
        <attr name="suffixSecondHorizontalMargin" format="dimension" />
        <attr name="suffixMilliSecondHorizontalMargin" format="dimension" />

        <attr name="suffixGravity">
            <enum name="top" value="0" />
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>

    </declare-styleable>
</resources>